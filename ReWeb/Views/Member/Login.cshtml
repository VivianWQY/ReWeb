@model ReWeb.Models.LogOnModel
@{
    ViewBag.Title = "用户登录";
}
<section id="login">
    <div class="row">
                <p>
                如果您没有账户，请先注册后登陆系统，赶快 @Html.ActionLink("加入", "register") 我们吧！
            </p>
        <div class="span8">

            <img src="@Url.Content("~/static/img/indicator.png")" width="300" height = "300"/>
        </div>
        <div class="span4">
            <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

            @Html.ValidationSummary(true, "登录失败，请检查您的信息填写是否正确", new Dictionary<string, object> { { "class", "alert alert-error" } })

            <form class="form-horizontal" method="post" action="#">
                <fieldset>
                    <legend>用户信息</legend>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>@Html.TextBoxFor(m => m.UserName, new { @type = "text", @placeholder = "身份证号", @class = "span3", @id = "inputun" })
                    </div>
                    <p class="help-block">@Html.ValidationMessageFor(m => m.UserName)</p>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span>@Html.PasswordFor(m => m.Password, new { @placeholder = "密码", @class = "span3", @id = "inputpwd" })
                    </div>
                    <p class="help-block">@Html.ValidationMessageFor(m => m.Password) </p>

                    <div class="input-prepend">
                        <input class="span2" id="verifyInput" placeholder = "请输入验证码"  name="VerifyCode" />
                        <img id="imgVerify" src="@Url.Action("VerifyCodeAction")" alt="看不清？点击更换" onclick="this.src=this.src+'?'" />
                    </div>
                    
                    <p> @Html.CheckBoxFor(m => m.RememberMe)
                        <span>记住我</span></p>
                    <p>
                        <input type="submit" class="btn btn-primary" value="登录" />
                        <a href = "register" class = "btn btn-success">注册账号</a>
                        <a href="#" class="btn">忘记密码</a>
                    </p>
                </fieldset>
            </form>
        </div>
    </div>
</section>
<script type="text/javascript">

</script>
